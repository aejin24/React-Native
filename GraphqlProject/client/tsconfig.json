{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": ["es2017"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "~/*": ["./*"],
            "@components/*": ["components/*"],
            "@screens/*": ["screens/*"],
            "@assets/*": ["assets/*"],
            "@graphql/*": ["graphql/*"],
            "@config/*": ["config/*"],
            "@interface/*": ["interface/*"],
            "@client_types/*": ["client_types/*"],
        }
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}